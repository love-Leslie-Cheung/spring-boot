<configuration>

	<property name="PROJECT_NAME" value="Payroll"/>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} %thread |-%-5level in %F:%L - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- project default level -->
	<logger name="com.dmsoft.clover" level="debug" />

	<logger name="org" level="info" />
	<!--<logger name="org.hibernate.hql.internal.ast" level="debug" />-->
	<!--log4jdbc -->
	<!--<logger name="jdbc.sqltiming" level="INFO"/>-->

	<root level="debug">
		<appender-ref ref="console" />
	</root>
</configuration>